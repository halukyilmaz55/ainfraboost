---
import BlogLayout from '../../layouts/BlogLayout.astro';
import fs from 'fs';

const filePath = new URL('../../content/blog/first-post.md', import.meta.url);
const markdown = fs.readFileSync(filePath, 'utf-8');
const title = markdown.match(/title: (.+)/)?.[1] || "Untitled";
const date = markdown.match(/date: (.+)/)?.[1] || "Unknown";
const category = markdown.match(/category: (.+)/)?.[1] || 'General';
const content = markdown.split('---')[2];
---

<BlogLayout title={title} date={date}>
  <p><strong>Kategori:</strong> {category}</p>
  <div innerHTML={content} />
</BlogLayout>
