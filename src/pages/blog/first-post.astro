---
import BlogLayout from '../../layouts/BlogLayout.astro';

// src/pages/blog/first-post.astro'dan bakınca:
// src/content/blog/first-post.md dosyasına erişmek için doğru yol:
const [post] = await Astro.glob('../../../content/blog/first-post.md');

const { title, date, category = 'General' } = post.frontmatter;
const Content = post.default;
---

<BlogLayout title={title} date={date}>
  <p><strong>Kategori:</strong> {category}</p>
  <Content />
</BlogLayout>
